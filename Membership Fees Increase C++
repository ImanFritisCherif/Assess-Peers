#include <iostream>
using namespace std;
int main ()
{
    float  total= 2500 ;
     
    float y = 0.04 ;
    int i ;
    
    for (i = 1 ; i <= 6 ; i++)
    {
        
       total = total + (total * y) ;
   
       cout<<"For Year " << i <<" The Price is : " <<total << endl;
    }
    
}
